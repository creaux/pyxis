{
  "name": "pyxis",
  "version": "1.0.0",
  "description": "Pyxis monorepo",
  "main": "index.js",
  "author": "Petr Juna",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/creaux/pyxis.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "build": "lerna run build",
    "docs": "lerna run docs",
    "release": "lerna exec --concurrency 1 -- npx --no-install semantic-release -e semantic-release-monorepo",
    "sass-fix": "node ./node_modules/node-sass/scripts/install.js && npm rebuild node-sass",
    "postinstall": "yarn sass-fix"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn lerna run test"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/config-lerna-scopes": "^8.0.0",
    "@commitlint/prompt-cli": "^8.0.0",
    "@lerna/project": "^3.10.0",
    "commitizen": "^3.1.1",
    "cz-lerna-changelog": "^2.0.2",
    "husky": "^2.5.0",
    "lerna": "^3.13.4",
    "semantic-release": "^15.13.17",
    "semantic-release-monorepo": "^6.1.1"
  },
  "engines": {
    "node": "10.15.3",
    "yarn": "1.15.2",
    "npm": "6.4.1"
  },
  "dependencies": {
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "pkg-dir": "^3.0.0"
  },
  "workspaces": [
    "packages/uxd/animaux",
    "packages/app/pyxis/theme",
    "packages/app/pyxis/web",
    "packages/lab/pyxis",
    "packages/lib/vue-components",
    "packages/lib/components",
    "packages/lib/decorators",
    "packages/lib/imigary",
    "packages/srv/nest",
    "packages/util/webpack",
    "packages/lib/ng-components"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
