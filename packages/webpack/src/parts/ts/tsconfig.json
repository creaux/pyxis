{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Make sure that Set, Map is working
    "downlevelIteration": true,
    "lib": [
      "es2016"
    ],
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "jsRules": {
    "no-empty": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/spec.ts"
  ]
}