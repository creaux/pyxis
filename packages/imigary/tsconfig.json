{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "skipLibCheck": true,
    // TODO: Separate for production
    "inlineSourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    // Makes sure that Set, Map is working
    "downlevelIteration": true,
    "lib": [
      "es2016",
      "dom"
    ],
    "experimentalDecorators": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/spec.ts"
  ]
}
