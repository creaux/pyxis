{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": false,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    // Make sure that Set, Map is working
    "downlevelIteration": true,
    "lib": [
      "es2016"
    ],
    "experimentalDecorators": true,
    "jsx": "react",
    // New
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "jsRules": {
    "no-empty": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/**/spec.ts"
  ]
}
